<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <per.goweii.ponyo.panel.AutoSplitTextView
        android:id="@+id/tv_sp_key"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="@drawable/ponyo_rect_bg"
        android:ellipsize="end"
        android:paddingStart="5dp"
        android:paddingTop="3dp"
        android:paddingEnd="5dp"
        android:paddingBottom="3dp"
        android:textColor="@color/ponyo_colorOnBackgroundMask"
        android:textSize="12sp"
        tools:text="1321321321" />

    <per.goweii.ponyo.panel.AutoSplitTextView
        android:id="@+id/tv_sp_value"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ponyo_rect_bg"
        android:maxLines="10"
        android:ellipsize="end"
        android:paddingStart="5dp"
        android:paddingTop="3dp"
        android:paddingEnd="5dp"
        android:paddingBottom="3dp"
        android:textColor="@color/ponyo_colorOnBackgroundMask"
        android:textSize="12sp"
        tools:text="1321321321" />

</LinearLayout>