<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="0dp"
    app:cardBackgroundColor="@color/ponyo_colorBackground"
    app:cardCornerRadius="0dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="@dimen/ponyo_margin_middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <per.goweii.ponyo.widget.AutoSplitTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请求信息"
                android:textColor="@color/ponyo_colorOnSurface"
                android:textSize="@dimen/ponyo_text_size_net" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/ponyo_margin_small"
                android:elevation="0dp"
                app:cardBackgroundColor="@color/ponyo_colorSurface"
                app:cardCornerRadius="@dimen/ponyo_corner_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/ponyo_margin_thin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <per.goweii.ponyo.widget.AutoSplitTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Url   :"
                            android:paddingStart="@dimen/ponyo_margin_thin"
                            android:paddingTop="@dimen/ponyo_margin_thin"
                            android:paddingEnd="@dimen/ponyo_margin_thin"
                            android:paddingBottom="@dimen/ponyo_margin_thin"
                            android:textColor="@color/ponyo_colorOnSurface"
                            android:textSize="@dimen/ponyo_text_size_net" />

                        <per.goweii.ponyo.widget.AutoSplitTextView
                            android:id="@+id/ponyo_net_tv_url"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/ponyo_margin_thin"
                            android:paddingTop="@dimen/ponyo_margin_thin"
                            android:paddingEnd="@dimen/ponyo_margin_thin"
                            android:paddingBottom="@dimen/ponyo_margin_thin"
                            android:textColor="@color/ponyo_colorOnSurface"
                            android:textSize="@dimen/ponyo_text_size_net" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <per.goweii.ponyo.widget.AutoSplitTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Method:"
                            android:paddingStart="@dimen/ponyo_margin_thin"
                            android:paddingTop="@dimen/ponyo_margin_thin"
                            android:paddingEnd="@dimen/ponyo_margin_thin"
                            android:paddingBottom="@dimen/ponyo_margin_thin"
                            android:textColor="@color/ponyo_colorOnSurface"
                            android:textSize="@dimen/ponyo_text_size_net" />

                        <per.goweii.ponyo.widget.AutoSplitTextView
                            android:id="@+id/ponyo_net_tv_method"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/ponyo_margin_thin"
                            android:paddingTop="@dimen/ponyo_margin_thin"
                            android:paddingEnd="@dimen/ponyo_margin_thin"
                            android:paddingBottom="@dimen/ponyo_margin_thin"
                            android:textColor="@color/ponyo_colorOnSurface"
                            android:textSize="@dimen/ponyo_text_size_net" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <per.goweii.ponyo.widget.AutoSplitTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status:"
                            android:paddingStart="@dimen/ponyo_margin_thin"
                            android:paddingTop="@dimen/ponyo_margin_thin"
                            android:paddingEnd="@dimen/ponyo_margin_thin"
                            android:paddingBottom="@dimen/ponyo_margin_thin"
                            android:textColor="@color/ponyo_colorOnSurface"
                            android:textSize="@dimen/ponyo_text_size_net" />

                        <per.goweii.ponyo.widget.AutoSplitTextView
                            android:id="@+id/ponyo_net_tv_status"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/ponyo_margin_thin"
                            android:paddingTop="@dimen/ponyo_margin_thin"
                            android:paddingEnd="@dimen/ponyo_margin_thin"
                            android:paddingBottom="@dimen/ponyo_margin_thin"
                            android:textColor="@color/ponyo_colorOnSurface"
                            android:textSize="@dimen/ponyo_text_size_net" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <per.goweii.ponyo.widget.AutoSplitTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Size  :"
                            android:paddingStart="@dimen/ponyo_margin_thin"
                            android:paddingTop="@dimen/ponyo_margin_thin"
                            android:paddingEnd="@dimen/ponyo_margin_thin"
                            android:paddingBottom="@dimen/ponyo_margin_thin"
                            android:textColor="@color/ponyo_colorOnSurface"
                            android:textSize="@dimen/ponyo_text_size_net" />

                        <per.goweii.ponyo.widget.AutoSplitTextView
                            android:id="@+id/ponyo_net_tv_size"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/ponyo_margin_thin"
                            android:paddingTop="@dimen/ponyo_margin_thin"
                            android:paddingEnd="@dimen/ponyo_margin_thin"
                            android:paddingBottom="@dimen/ponyo_margin_thin"
                            android:textColor="@color/ponyo_colorOnSurface"
                            android:textSize="@dimen/ponyo_text_size_net" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <per.goweii.ponyo.widget.AutoSplitTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cost  :"
                            android:paddingStart="@dimen/ponyo_margin_thin"
                            android:paddingTop="@dimen/ponyo_margin_thin"
                            android:paddingEnd="@dimen/ponyo_margin_thin"
                            android:paddingBottom="@dimen/ponyo_margin_thin"
                            android:textColor="@color/ponyo_colorOnSurface"
                            android:textSize="@dimen/ponyo_text_size_net" />

                        <per.goweii.ponyo.widget.AutoSplitTextView
                            android:id="@+id/ponyo_net_tv_cost"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/ponyo_margin_thin"
                            android:paddingTop="@dimen/ponyo_margin_thin"
                            android:paddingEnd="@dimen/ponyo_margin_thin"
                            android:paddingBottom="@dimen/ponyo_margin_thin"
                            android:textColor="@color/ponyo_colorOnSurface"
                            android:textSize="@dimen/ponyo_text_size_net" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <per.goweii.ponyo.widget.AutoSplitTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ponyo_margin_small"
                android:text="请求头"
                android:textColor="@color/ponyo_colorOnSurface"
                android:textSize="@dimen/ponyo_text_size_net" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/ponyo_margin_small"
                android:elevation="0dp"
                app:cardBackgroundColor="@color/ponyo_colorSurface"
                app:cardCornerRadius="@dimen/ponyo_corner_radius">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ponyo_net_rv_req_headers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    android:padding="@dimen/ponyo_margin_thin"
                    android:scrollbars="none" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ponyo_margin_small"
                android:text="响应头"
                android:textColor="@color/ponyo_colorOnSurface"
                android:textSize="@dimen/ponyo_text_size_net" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/ponyo_margin_small"
                android:elevation="0dp"
                app:cardBackgroundColor="@color/ponyo_colorSurface"
                app:cardCornerRadius="@dimen/ponyo_corner_radius">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ponyo_net_rv_resp_headers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    android:padding="@dimen/ponyo_margin_thin"
                    android:scrollbars="none" />

            </androidx.cardview.widget.CardView>

            <per.goweii.ponyo.widget.AutoSplitTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ponyo_margin_small"
                android:text="响应体"
                android:textColor="@color/ponyo_colorOnSurface"
                android:textSize="@dimen/ponyo_text_size_net" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/ponyo_margin_small"
                android:elevation="0dp"
                app:cardBackgroundColor="@color/ponyo_colorSurface"
                app:cardCornerRadius="@dimen/ponyo_corner_radius">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <per.goweii.ponyo.widget.HScrollView
                        android:id="@+id/ponyo_net_hsv_json"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:fillViewport="true"
                        android:overScrollMode="never"
                        android:padding="@dimen/ponyo_margin_thin"
                        android:scrollbars="none">

                        <com.yuyh.jsonviewer.library.JsonRecyclerView
                            android:id="@+id/ponyo_net_json_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </per.goweii.ponyo.widget.HScrollView>

                    <per.goweii.ponyo.widget.AutoSplitTextView
                        android:id="@+id/ponyo_net_tv_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/ponyo_margin_thin"
                        android:paddingTop="@dimen/ponyo_margin_thin"
                        android:paddingEnd="@dimen/ponyo_margin_thin"
                        android:paddingBottom="@dimen/ponyo_margin_thin"
                        android:textColor="@color/ponyo_colorOnSurface"
                        android:textSize="@dimen/ponyo_text_size_net" />

                </FrameLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.cardview.widget.CardView>