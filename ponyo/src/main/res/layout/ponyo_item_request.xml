<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/ponyo_panel_padding"
    android:layout_marginTop="@dimen/ponyo_panel_padding_half"
    android:layout_marginEnd="@dimen/ponyo_panel_padding"
    android:layout_marginBottom="@dimen/ponyo_panel_padding_half"
    android:orientation="vertical"
    android:paddingTop="@dimen/ponyo_panel_padding_half"
    android:paddingBottom="@dimen/ponyo_panel_padding_half"
    app:cardBackgroundColor="@color/ponyo_colorSurface"
    app:cardCornerRadius="@dimen/ponyo_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:id="@+id/v_status"
            android:layout_width="@dimen/ponyo_corner_radius"
            android:layout_height="match_parent"
            android:background="@color/ponyo_colorLogInfo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ponyo_margin_thin"
            android:padding="@dimen/ponyo_margin_thin">

            <TextView
                android:id="@+id/tv_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ponyo_colorOnSurface"
                android:textSize="@dimen/ponyo_text_size_tm"
                android:typeface="monospace"
                tools:text="GET" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/ponyo_colorOnSurface"
                android:textSize="@dimen/ponyo_text_size_tm"
                android:typeface="monospace"
                tools:text="2021-1-12 12:12:31.172" />

            <TextView
                android:id="@+id/tv_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_method"
                android:layout_marginTop="@dimen/ponyo_margin_thin"
                android:textColor="@color/ponyo_colorOnSurface"
                android:textSize="@dimen/ponyo_text_size_tm"
                android:typeface="monospace"
                tools:text="/course/123" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>